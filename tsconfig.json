{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "types": ["vite/client", "node", "element-plus/global", "jest", "unplugin-vue-define-options/macros-global"],
    "lib": ["esnext", "dom"],
    "paths": {
      "~/*": ["src/*"]
    },
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*",
    "types/*.d.ts",
    "types/**/*.d.ts",
    "build/**/*.ts",
    "build/**/*.d.ts"
  ]
}
